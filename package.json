{
  "name": "@autoline/core",
  "private": true,
  "engines": {
    "node": ">=16 <=18",
    "yarn": ">=1 <2"
  },
  "scripts": {
    "start:frontend": "yarn workspace @autoline/frontend run start:dev:local",
    "start:backend": "yarn workspace @autoline/backend start:dev",
    "migrate": "yarn workspace @autoline/backend run db:migrate:dev",
    "install:frontend": "yarn workspace @autoline/frontend install",
    "install:backend": "yarn workspace @autoline/backend install",
    "install:shared": "yarn workspace @autoline/shared install",
    "install:all": "yarn && yarn install:shared && yarn install:frontend && yarn install:backend",
    "lint:editorconfig": "editorconfig-checker",
    "lint:fs": "ls-lint",
    "lint:shared:js": "yarn workspace @autoline/shared lint:js",
    "lint:backend:js": "yarn workspace @autoline/backend lint:js",
    "lint:frontend:css": "yarn workspace @autoline/frontend lint:css",
    "lint:frontend:js": "yarn workspace @autoline/frontend lint:js",
    "lint:css": "yarn lint:frontend:css",
    "lint:js": "yarn lint:shared:js && yarn lint:backend:js && yarn lint:frontend:js",
    "lint": "yarn lint:editorconfig && yarn lint:fs && yarn lint:css && yarn lint:js",
    "build:shared": "yarn workspace @autoline/shared build",
    "build:frontend": "yarn workspace @autoline/frontend build",
    "build:backend": "yarn workspace @autoline/backend build",
    "build": "yarn build:shared && yarn build:frontend && yarn build:backend"
  },
  "dependencies": {},
  "devDependencies": {
    "@ls-lint/ls-lint": "1.11.2",
    "@types/node": "17.0.45",
    "@typescript-eslint/eslint-plugin": "5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "editorconfig-checker": "4.0.2",
    "eslint": "8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "simple-git-hooks": "2.8.0",
    "stylelint": "14.9.1",
    "stylelint-config-standard": "26.0.0",
    "stylelint-order": "5.0.0",
    "typescript": "4.7.4"
  },
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
