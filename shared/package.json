{
  "name": "@autoline/shared",
  "private": true,
  "engines": {
    "node": ">=16 <=18",
    "yarn": ">=1 <2"
  },
  "scripts": {
    "lint:js": "npx eslint \"src/**/*.ts\"",
    "lint": "yarn lint:js",
    "start:dev": "concurrently \"tsc -w\" \"tsc-alias -w\"",
    "build:ts": "tsc && tsc-alias",
    "build": "yarn build:ts",
    "build-and-update": "yarn build && cd ../backend && yarn update bws-shared && cd ../frontend && yarn update bws-shared"
  },
  "dependencies": {
    "joi": "^17.6.0"
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "tsc-alias": "^1.6.11",
    "typescript": "4.7.4"
  }
}
