{
  "extends": "../tsconfig.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "build",
    "declaration": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["./src/common/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@validation/*": ["./src/validation/*"]
    }
  }
}
